package LEC2;

public class pattern_2 {
    public static void main(String[] args) {
        int row=1;
        int n=5;
        int star=1;
        while(row<=n){
            //star
            int i=1;
            while(i<=star){
                System.out.print("* ");
                i++;
            }
            //next row

            System.out.println();
            row++;
            star++;


        }
    }
}
